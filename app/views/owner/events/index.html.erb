<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>User</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Invite</th>
      <th>Event date</th>
      <th>Estimated time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.owner %></td>
        <td><%= event.user %></td>
        <td><%= event.email %></td>
        <td><%= event.tel %></td>
        <td><%= event.invite %></td>
        <td><%= event.event_date %></td>
        <td><%= event.estimated_time %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

